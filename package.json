  },
  "dependencies": {
    "@mistralai/mistralai": "^1.13.0",
    "@prisma/client": "6.19",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-scrollbar-hide": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "prisma": "6.19",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
