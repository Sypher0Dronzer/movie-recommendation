{
  "name": "movie-recommendation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
  
    "start": "next start",
    "postinstall": "npx prisma generate",
    "seed": "npx tsx prisma/seed.ts",
